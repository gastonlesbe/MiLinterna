<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item
       android:layout_width="1dp">
       <shape
           >
    <solid android:color="#8698FC"/>

    <padding android:left="0dp"
        android:top="0dp"
        android:right="1dp"
        android:bottom="1dp"
        />

    <corners
        android:bottomRightRadius="20dp"
        android:bottomLeftRadius="20dp"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"/>
       </shape>
   </item>
    <item
        android:left="4dp"  android:top="4dp"
        android:layout_width="1dp">
        <shape
            >
            <solid android:color="#ffffff"/>

            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <corners
                android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
        </shape>
    </item>
    <item
        android:right="4dp"
        android:bottom="4dp"
        android:layout_width="1dp">
        <shape
            >
        <solid android:color="#63625f"/>

        <padding android:left="1dp"
            android:top="1dp"
            android:right="1dp"
            android:bottom="1dp"
            />

        <corners
            android:layout_width="1dp"
            android:bottomRightRadius="20dp"
            android:bottomLeftRadius="20dp"
            android:topLeftRadius="20dp"
            android:topRightRadius="20dp"/>
        </shape>
    </item>

</layer-list>
